@using SmartLearning.Core.Entities.ClassroomAggregate
@model IEnumerable<ReferenceBook>

@{
    ViewData["Title"] = "Reference Books";
}

<div class="app-content content ">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper">
        <partial name="_BreadCrumbPartial" />
        <div class="content-body">
            <!-- Accordion with hover start -->
            <section id="accordion-hover">
                <div class="row">
                    <div class="col-sm-12 ">
                        <div class="card collapse-icon">
                            <div class="card-header bg-primary">
                                <h4 class="card-title text-white">Reference Books</h4>
                            </div>
                            <div class="card-body d-flex justify-content-center">
                                @{
                                    foreach (var item in Model)
                                    {
                                        <div class="col-md-3 m-4">
                                            <div class="card card-bordered text-center">
                                                <div class="card-header">
                                                    <h4 class="card-title">@item.BookName</h4>
                                                    <p>@item.AuthorName</p>
                                                </div>
                                                <div class="card-body">
                                                    <img class="img-fluid my-2" src="/StaticFiles/ReferenceBooks/@(item.ImageName ?? "default.jpg")" alt="Card image cap" />
                                                    <div class="col-12">
                                                        <div class="alert alert-primary" role="alert">
                                                            <div class="alert-body">
                                                                &#x20B9;<strong>@item.Price</strong>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <a class="btn btn-primary" asp-action="ViewPdf" asp-route-id="@item.Id">View</a>
                                                        <a class="btn btn-primary" asp-action="Download" asp-route-id="@item.Id">Download</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Accordion with hover end -->

        </div>
    </div>
</div>

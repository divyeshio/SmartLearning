@using SmartLearning.Web.DTO
@model ChapterViewModel

@{
    ViewData["Title"] = "Add Chapter";
}

<div class="app-content content ">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper">
        <partial name="_BreadCrumbPartial" />
        <div class="content-body d-flex justify-content-center">
            <div class="card col-md-4">
                <div class="card-header"><h2 >Add Chapter</h2></div>
                <hr />
                <div class="card-body">
                    <form asp-action="Add" class="auth-register-form mt-2">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="SerialNo" class="control-label"></label>
                            <input asp-for="SerialNo" class="form-control" type="text" placeholder="Serial No" />
                            <span asp-validation-for="SerialNo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Chapter Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <input asp-for="BoardId" type="hidden" value="@User.FindFirst("BoardId").Value" />
                        <input asp-for="SubjectId" type="hidden" value="@User.FindFirst("SubjectId").Value" />
                        <input asp-for="StandardId" type="hidden" value="@User.FindFirst("StandardId").Value" />
                        <div class="form-group">
                            <input type="submit" value="Add" class="btn btn-primary" />
                        </div>
                    </form>
                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section PageJS {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

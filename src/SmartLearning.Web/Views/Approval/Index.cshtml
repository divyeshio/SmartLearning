@using SmartLearning.Core.Entities.UsersAggregate
@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Approvals";
}


<div class="app-content content ">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper">
        <partial name="_BreadCrumbPartial" />
        <div class="content-body">
            <!-- Table Hover Animation start -->
            <div class="row" id="table-hover-animation">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Pending Approvals</h4><span>Total : @Model.Count()</span>
                        </div>
                        <div class="table-responsive">
                            <form method="post">
                                <table class="table table-hover-animation">
                                    <thead>
                                        <tr>
                                            <th>No</th>
                                            <th>First Name</th>
                                            <th>Last Name</th>
                                            <th>Board</th>
                                            <th>Subject</th>
                                            <th>Standard</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @{
                                            int i = 1;
                                            foreach (ApplicationUser user in Model)
                                            {
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@user.FirstName</td>
                                                    <td>@user.LastName</td>
                                                    <td><span class="font-weight-bold">@user.Board.AbbrName</span></td>
                                                    <td><span class="font-weight-bold">@user.Subject.Name</span></td>
                                                    <td><span class="font-weight-bold">@user.Standard.Level</span></td>
                                                    <td>
                                                        <input name="id" type="hidden" value="@user.Id" />
                                                        <button type="submit" asp-action="Approve" class="btn btn-success">Approve</button>
                                                        <button type="submit" asp-action="Deny" class="btn btn-danger">Deny</button>
                                                    </td>
                                                </tr>
                                                i++;
                                            }
                                            if (Model.Count() == 0)
                                            {
                                                <tr>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td>No Approvals Pending</td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                </tr>

                                            }
                                        }
                                    </tbody>
                                </table>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Table head options end -->

        </div>
    </div>
</div>
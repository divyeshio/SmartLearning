@using SmartLearning.Web.DTO
@model StudentVM

@{
    ViewData["Title"] = "Edit Student";
}
<div class="app-content content ">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper">
        <partial name="_BreadCrumbPartial" />
        <div class="content-body d-flex justify-content-center">
            <div class="card col-md-4">
                <div class="card-header"><h2>Edit Student</h2></div>
                <hr />
                <div class="card-body">
                    <form asp-action="EditStudent" asp-route-id="@Model.Id" method="post" class="auth-register-form">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group custom-control custom-switch custom-switch-primary mb-1 d-flex justify-content-end">
                            <p class="mb-50 mr-25">Login</p>
                            <input type="checkbox" class="custom-control-input" asp-for="isEnabled" checked="@Model.isEnabled" />
                            <label class="custom-control-label" asp-for="isEnabled">
                                <span class="switch-icon-left"><i data-feather="check"></i></span>
                                <span class="switch-icon-right"><i data-feather="x"></i></span>
                            </label>
                        </div>
                        <div class="form-group">
                            <label asp-for="Id" class="form-label"></label>
                            <input asp-for="Id" class="form-control" type="text" tabindex="1" readonly="readonly" />
                        </div>
                        <div class="form-group">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" type="text" placeholder="First Name" autofocus="autofocus" tabindex="1" spellcheck="false" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" type="text" placeholder="Last Name" autofocus="" tabindex="2" spellcheck="false" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" id="register-username" type="text" placeholder="example@mail.com" aria-describedby="register-email" autofocus="" tabindex="3" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group d-flex justify-content-center align-items-center">
                            <label asp-for="StandardId" class="form-label mr-1"></label>
                            <div class="btn-group align-justify mr-1">
                                <select asp-items="Model.Standards" asp-for="StandardId" class="form-control mb-1">
                                </select>
                            </div>
                            <label asp-for="BoardId" class="form-label mr-1"></label>
                            <div class="btn-group">
                                <select asp-items="Model.Boards" asp-for="BoardId" class="form-control mb-1">
                                </select>
                            </div>
                        </div>

                        <div class="form-group"><button class="btn btn-primary btn-block">Save</button></div>
                    </form>
                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section PageJS{
    @Html.RenderPartialAsync("_ValidationScriptsPartial")
}
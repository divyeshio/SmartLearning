                            <defs>
                                <linearGradient id="linearGradient-1" x1="100%" y1="10.5120544%" x2="50%" y2="89.4879456%">
                                    <stop stop-color="#000000" offset="0%"></stop>
                                    <stop stop-color="#FFFFFF" offset="100%"></stop>
                                </linearGradient>
                                <linearGradient id="linearGradient-2" x1="64.0437835%" y1="46.3276743%" x2="37.373316%" y2="100%">
                                    <stop stop-color="#EEEEEE" stop-opacity="0" offset="0%"></stop>
                                    <stop stop-color="#FFFFFF" offset="100%"></stop>
                                </linearGradient>
                            </defs>
                            <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                <g id="Artboard" transform="translate(-400.000000, -178.000000)">
                                    <g id="Group" transform="translate(400.000000, 178.000000)">
                                        <path class="text-primary" id="Path" d="M-5.68434189e-14,2.84217094e-14 L39.1816085,2.84217094e-14 L69.3453773,32.2519224 L101.428699,2.84217094e-14 L138.784583,2.84217094e-14 L138.784199,29.8015838 C137.958931,37.3510206 135.784352,42.5567762 132.260463,45.4188507 C128.736573,48.2809251 112.33867,64.5239941 83.0667527,94.1480575 L56.2750821,94.1480575 L6.71554594,44.4188507 C2.46876683,39.9813776 0.345377275,35.1089553 0.345377275,29.8015838 C0.345377275,24.4942122 0.230251516,14.560351 -5.68434189e-14,2.84217094e-14 Z" style="fill: currentColor"></path>
                                        <path id="Path1" d="M69.3453773,32.2519224 L101.428699,1.42108547e-14 L138.784583,1.42108547e-14 L138.784199,29.8015838 C137.958931,37.3510206 135.784352,42.5567762 132.260463,45.4188507 C128.736573,48.2809251 112.33867,64.5239941 83.0667527,94.1480575 L56.2750821,94.1480575 L32.8435758,70.5039241 L69.3453773,32.2519224 Z" fill="url(#linearGradient-1)" opacity="0.2"></path>
                                        <polygon id="Path-2" fill="#000000" opacity="0.049999997" points="69.3922914 32.4202615 32.8435758 70.5039241 54.0490008 16.1851325"></polygon>
                                        <polygon id="Path-21" fill="#000000" opacity="0.099999994" points="69.3922914 32.4202615 32.8435758 70.5039241 58.3683556 20.7402338"></polygon>
                                        <polygon id="Path-3" fill="url(#linearGradient-2)" opacity="0.099999994" points="101.428699 0 83.0667527 94.1480575 130.378721 47.0740288"></polygon>
                                    </g>
                                </g>
                            </g>
                        </svg>
                        <h2 class="brand-text text-primary ml-1 jumbotron-fluid">Smart Learning</h2>
                    </a>
                    <!-- /Brand logo-->
                    <!-- Left Text-->
                    <div class="d-none d-lg-flex col-lg-8 align-items-center p-5">
                        <div class="w-100 d-lg-flex align-items-center justify-content-center px-5"><img class="img-fluid" src="~/images/pages/login-v2.svg" alt="Login V2" /></div>
                    </div>
                    <!-- /Left Text-->
                    <!-- Login-->
                    <div class="d-flex col-lg-4 align-items-center auth-bg px-2 p-lg-5">
                        <div class="col-12 col-sm-8 col-md-6 col-lg-12 px-xl-2 mx-auto">
                            <h2 class="card-title font-weight-bold mb-1">Welcome to Smart Learning 👋</h2>
                            <p class="card-text mb-2">Please sign-in to your account and start learning</p>
                            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="auth-login-form mt-2" role="form">
                                <div asp-validation-summary="ModelOnly" class="text-danger alert-validation-msg"></div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="Email">Email</label>
                                    <input asp-for="Email" class="form-control alert-validation" id="email" placeholder="example@example.com" aria-describedby="email" autofocus="" tabindex="1" autocomplete="email" />
                                    <span asp-validation-for="Email" class="alert alert-danger alert-validation-msg" />
                                </div>
                                <div class="form-group">
                                    <div class="d-flex justify-content-between">
                                        <label for="login-password">Password</label><a asp-controller="Account" asp-action="ForgotPassword"><small>Forgot Password?</small></a>
                                    </div>
                                    <div class="input-group input-group-merge form-password-toggle">
                                        <input asp-for="Password" class="form-control form-control-merge" id="login-password" placeholder="············" aria-describedby="login-password" tabindex="2" autocomplete="current-password" />
                                        <div class="input-group-append"><span class="input-group-text cursor-pointer"><i data-feather="eye"></i></span></div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="d-flex justify-content-between">
                                    <div class="custom-control custom-checkbox">
                                        <input asp-for="RememberMe" class="custom-control-input" id="remember-me" tabindex="3" />
                                        <label class="custom-control-label" for="remember-me"> Remember Me</label>
                                    </div>
                                     <a asp-action="ResendEmail"><small>Resend email confirmation</small></a>
                                    </div>
                                </div>
                                <!--<div class="form-group">
                                <div class="col-lg-6 col-12">-->
                                <!-- button group checkbox -->
                                <!--<div class="btn-group btn-group-toggle" data-toggle="buttons">
                                            <label class="btn btn-outline-primary waves-effect active">
                                                <input type="radio" name="radio_options" id="Student" onclick="studentclick"> Student
                                            </label>
                                            <label class="btn btn-outline-primary waves-effect">
                                                <input type="radio" name="radio_options" id="Faculty"> Faculty
                                            </label>
                                            <label class="btn btn-outline-primary waves-effect">
                                                <input type="radio" name="radio_options" id="Admin"> Admin
                                            </label>
                                        </div>
                                    </div>
                                </div>-->
                                <button type="submit" class="btn btn-primary btn-block" tabindex="4">Sign in</button>
                            </form>
                            <p class="text-center mt-2"><span>New on our platform?</span><a asp-action="Register" asp-controller="Account"><span>&nbsp;Create an account</span></a></p>
                            <div class="divider my-2">
                                <div class="divider-text">or</div>
                            </div>
                            <form id="external-account" asp-action="ExternalLogin" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                                <div class="auth-footer-btn d-flex justify-content-center">
                                    @foreach (var provider in Model.ExternalLogins)
                                    {
                                        if (provider.Name == "Google")
                                        {
                                            <div class="col-md-4">
                                                <button type="submit" class="btn btn-block btn-google" value="@provider.Name" title="Log in using your @provider.DisplayName account" name="provider">
                                                    <i class="fab fa-google fa-align-left "></i>
                                                    Google
                                                </button>
                                            </div>
                                        }
                                        else if (provider.Name == "Facebook")
                                        {
                                            <div class="col-md-4">
                                                <button class="btn-block btn btn-facebook" type="submit" value="@provider.Name" title="Log in using your @provider.DisplayName account" name="provider">
                                                    <i class="fab fa-facebook fa-align-left"></i>
                                                    Facebook
                                                </button>
                                            </div>
                                        }
                                        else if (provider.Name == "Microsoft")
                                        {
                                            <div class="col-md-4">
                                                <button class="btn-block btn btn-microsoft" type="submit" value="@provider.Name" title="Log in using your @provider.DisplayName account" name="provider">
                                                    <i class="fab fa-microsoft fa-align-left"></i>
                                                    Microsoft
                                                </button>
                                            </div>
                                        }
                                    }
                                </div>
                            </form>

                        </div>
                    </div>
                    <!-- /Login-->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END: Content-->
<!-- BEGIN: Page JS-->
@section PageJS{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/scripts/pages/page-auth-login.js"></script>
    <script src="https://kit.fontawesome.com/187a66d6db.js" crossorigin="anonymous"></script>
}
<!-- END: Page JS-->
<!-- END: Body-->
